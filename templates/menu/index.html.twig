{% extends 'base.html.twig' %}

{% block title %}Menu{% endblock %}

{% block body %}
    <style>
        .product-child {
            width: calc(25% - 1em);
            margin-left: 1em;
            margin-top: 1em;
        }

        .product-img {
            width: 100%;
            height: 200px;
        }

        @media (max-width: 991.98px) {
            .product-child {
                width: calc(50% - 1em);
                margin-left: 1em;
                margin-top: 1em;
            }

            .product-img {
                width: 100%;
                height: 300px;
            }
        }

        @media (max-width: 767.98px) {
            .product-child {
                width: calc(100% - 1em);
                margin-left: 1em;
                margin-top: 1em;
            }
        }
    </style>
    <div class="container">
        <h1 class="m-3">This weeks menu</h1>
        {% set cartQuantity = 0 %}
        {% for item in cart.items %}
            {% set cartQuantity = cartQuantity + item.quantity %}
        {% endfor %}
        <span class="badge bg-dark m-3">Products in cart ({{ cartQuantity }})</span>

        <div class="d-flex flex-wrap mt-3">
            {% for product in products %}
                <div class="card product-child">
                    <img class="card-img-top img-fluid product-img"
                         src="{{ asset('images/products/') ~ product.thumbnail }}" alt="{{ product.thumbnail }}">
                    <div class="card-body">
                        <h5 class="card-title">{{ product.name }}</h5>
                        <p class="card-text text-wrap">{{ product.description }}</p>
                    </div>
                    <div class="card-footer">
                        <a href="{{ url('detailProduct', {'id': product.id}) }}"
                           class="btn-dark btn btn-sm align-text-bottom">Add to cart</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>


{% endblock %}
